@{    ViewBag.Title = "Index";}@Scripts.Render("~/Scripts/highcharts/Report.js")@Scripts.Render("~/EasyUI/datagrid-detailview.js")@using Resources<div>    <table id="divSearch">        <tr>            <td> @Html.Label(Resource.User_account)</td>            <td>                <input class="easyui-textbox" id="UserAccount" />            </td>            <td>@Html.Label(Resource.User_name)</td>            <td>                <input class="easyui-textbox" id="UserName" name="UserName" columnname="UserName" operator="LIKE" />            </td>            <td>                <a id="btnSearch" href="javascript:void(0)" class="easyui-linkbutton" data-options="plain:true,iconCls:'icon-search'" onclick="">@Html.Label(Resource.Select) </a>                <a id="btnRefresh" href="javascript:void(0)" class="easyui-linkbutton" data-options="plain:true,iconCls:'icon-reload'" onclick="refush()">@Html.Label(Resource.Refresh) </a>            </td>        </tr>    </table></div><div class="easyui-panel" id="toolbar" style="width:1500px">    <a id="add" href="javascript:void(0)" class="easyui-linkbutton" data-options="plain:true,iconCls:'icon-add'">@Html.Label(Resource.Add)</a>    <a id="modify" href="javascript:void(0)" class="easyui-linkbutton" data-options="plain:true,iconCls:'icon-edit'">@Html.Label(Resource.Edit)</a>    <a id="delete" href="javascript:void(0)" class="easyui-linkbutton" data-options="plain:true,iconCls:'icon-remove'">@Html.Label(Resource.Delete)</a></div><table id="datagrid" class="easyui-datagrid" style="height:500px;" toolbar="#toolbar" title='@Html.Label(Resource.Information_list)' data-options="singleSelect:true"></table><script type="text/javascript">    $(function () {        datagrid();    });    //点击【查询】按钮mkk    $("#btnSearch").click(function () {        datagrid();    });    //数据绑定    function datagrid() {        Datagrid.ViewName = "SYS_User";        Datagrid.SortColumn = "ID";        Datagrid.Columns = [[                           { field: 'ID', title:'@Html.Label(Resource.serial_number)', width: '85px', align: 'center' },                           { field: 'UserAccount', title:'@Html.Label(Resource.User_account)' , width: '85px', align: 'center' },                           { field: 'Password', title:'@Html.Label(Resource.User_password)' , width: '85px', align: 'center' },                           { field: 'UserName', title:'@Html.Label(Resource.User_name)' , width: '80px', align: 'center' },                           { field: 'UserWorkID', title:'@Html.Label(Resource.work_number)', width: '80px', align: 'center' },                                   {                                       field: 'IsActive', title:'@Html.Label(Resource.Whether_activation)' , width: '80px', align: 'center',                                       formatter: function (data) {                                           if (data)                                               return "OK";                                           else                                               return "NG";                                       }                                   },                           { field: 'LatestLoginMachine', title:'@Html.Label(Resource.Recently_logged_in_machines)', width: '160px', align: 'center' },                           { field: 'CreateUserAccount', title: '@Html.Label(Resource.Founder)', width: '80px', align: 'center' },                           { field: 'CreateTime', title:'@Html.Label(Resource.Creation_time)' , width: '130px', align: 'center' },                           { field: 'CreateMachine', title:'@Html.Label(Resource.Create_machine_name)' , width: '90px', align: 'center' },                           { field: 'LatestModifyUserAccount', title:'@Html.Label(Resource.Modified_by)' , width: '85px', align: 'center' },                           { field: 'LatestModifyTime', title:'@Html.Label(Resource.Modification_time)', width: '125px', align: 'center' },                           { field: 'LatestModifyMachine', title:'@Html.Label(Resource.Modify_machine_name)' , width: '125px', align: 'center' }        ]];        Datagrid.Pagination = false;        Datagrid.URL = ("@Url.Action("GetReportData", "Report/Report")");        Datagrid.Search("#divSearch");    }    //刷新页面    function refush() {        document.location.reload();    }    //新增    $("#add").click(function () {        openDlg({            url: "@Url.Action("Add")",            title:'@Html.Label(Resource.Add_information)',            width: "300px",            height: "275px"        });    });    //修改    $("#modify").click(function () {        var row = $("#datagrid").datagrid('getSelected');        if (row == null || row == undefined) {            $.messager.alert('@Html.Label(Resource.Tips)','@Html.Label(Resource.Please_select_the_data_to_modify)');            return;        }        openDlg({            url: "@Url.Action("Modify")?ID=" + row.ID,            title:'@Html.Label(Resource.Modify_information)',            width: "300px",            height: "275px"        });    });    //删除    $("#delete").click(function () {        var row = $("#datagrid").datagrid('getSelected');        if (row == null || row == undefined) {            $.messager.alert('@Html.Label(Resource.Tips)','@Html.Label(Resource.Please_select_the_data_to_modify)');            return;        }        $.messager.confirm('@Html.Label(Resource.Tips)', '@Html.Label(Resource.Are_you_sure_you_want_to_delete_this_data)', function (r) {            if (r) {                $.post("@Url.Action("DeleteCfg")", { ID: row.ID }, function (result) {                    if (result.state == "success") {                        datagrid();                        $.messager.alert('@Html.Label(Resource.Tips)','@Html.Label(Resource.Deletion_succeeded)');                    }                    else {                        $.messager.alert('@Html.Label(Resource.Error)', result.message);                    }                });            }        });    });</script>